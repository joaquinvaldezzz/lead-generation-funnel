<Layout title="Lead Generation Funnel">
  <header class="relative min-h-screen overflow-hidden text-white">
    <img
      class="pointer-events-none absolute top-0 -right-1/3 max-h-screen select-none sm:-top-24 md:-top-48 lg:-top-32 lg:-right-24"
